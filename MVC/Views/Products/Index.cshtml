@model IEnumerable<ProductModel>
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Index";
    int count = Model.Count();
    @* Count method returns the element count of an IEnumerable collection. *@

    @* Ternary Operator *@
    string countOutput = count == 0 ? "No records found." : count == 1 ? "1 record found." : count + " records found.";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p class="text-info">
    @countOutput
</p>
<table class="table" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPriceOutput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDateOutput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsContinuedOutput)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryOutput)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UnitPriceOutput)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ExpirationDateOutput)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsContinuedOutput)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CategoryOutput)
					</td>
					<td>
						<a asp-action="Details" asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
		}
    </tbody>
</table>

@section Scripts{

    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>

    <script>
        $(function () {
            $("#datatable").DataTable();
        });
    </script>
}



